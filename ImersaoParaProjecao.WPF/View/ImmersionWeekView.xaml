<Window x:Class="ImersaoParaProjecao.View.ImmersionWeekView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImersaoParaProjecao.View"
        xmlns:viewmodel="clr-namespace:ImersaoParaProjecao.ViewModel"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactions"
        xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
        d:DataContext="{d:DesignInstance Type=viewmodel:ImmersionWeekViewModel}"
        mc:Ignorable="d"
        Title="Immersion to Projection" Height="450" Width="800"
        Background="Black">
    <Grid>
        <b:Interaction.Triggers>
            <b:EventTrigger EventName="DragEnter">
                <b:InvokeCommandAction Command="{Binding DragEnter}"/>
            </b:EventTrigger>
            <b:EventTrigger EventName="DragDrop">
                <b:InvokeCommandAction Command="{Binding DragDrop}"/>
            </b:EventTrigger>
        </b:Interaction.Triggers>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Grid.Column="0" Grid.Row="0" Grid.RowSpan="2"
               Content="Drop immersion PDF file here"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               HorizontalContentAlignment="Center"
               VerticalContentAlignment="Center"
               Foreground="White"
               FontSize="20"/>
    </Grid>
</Window>
