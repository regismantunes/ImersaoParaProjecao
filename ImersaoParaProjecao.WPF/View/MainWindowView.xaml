<Window x:Class="ImmersionToProjection.View.MainWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImmersionToProjection.View"
        xmlns:viewmodel="clr-namespace:ImmersionToProjection.ViewModel"
        mc:Ignorable="d"
        Title="Immersion to Projection"
        Height="450" Width="800"
        d:DataContext="{d:DesignInstance Type=viewmodel:MainWindowViewModel}"
        DragEnter="Window_DragEnter"
        Drop="Window_Drop"
        AllowDrop="True"
        Cursor="{Binding CurrentCursor}"
        Style="{DynamicResource {x:Type Window}}">
    <DockPanel>
        <Grid Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Button Grid.Row="0" Grid.RowSpan="2" Grid.Column="1"
                    Width="32" Height="32"
                    VerticalAlignment="Top"
                    Style="{DynamicResource ImageButton}">
                <Image Source="/Resources/Images/Configuration_Icon_Dark_32.png"/>
            </Button>
            <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                Text="{Binding DropFileMessage}"
                Style="{DynamicResource DropMessage}"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Visibility="{Binding VisibilityDropFileTextBlock}"/>
            <ContentControl Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                Content="{Binding ImmersionWeekView}"
                Visibility="{Binding VisibilityImmersionWeekView}">
            </ContentControl>
        </Grid>
    </DockPanel>
</Window>