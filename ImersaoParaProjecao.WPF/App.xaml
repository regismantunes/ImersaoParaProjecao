<Application x:Class="ImmersionToProjection.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ImmersionToProjection"
             xmlns:converter="clr-namespace:ImmersionToProjection.Utility.Converter"
             xmlns:sys="clr-namespace:System;assembly=mscorlib">
    <Application.Resources>
        <ResourceDictionary>
            <sys:Double x:Key="ScrollViewerWitdh">20</sys:Double>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                    <converter:WidthMarginConverter x:Key="WidthMarginConverter"/>
                    <converter:HeightMarginConverter x:Key="HeightMarginConverter"/>
                </ResourceDictionary>
                <ResourceDictionary Source="/Resources/Themes/Dark.xaml"/>
                <ResourceDictionary Source="/Resources/Styles/Default.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
